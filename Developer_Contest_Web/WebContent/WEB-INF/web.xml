	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.xhtml</form-login-page>
			<form-error-page>/loginFail.xhtml</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<role-name>Contender</role-name>
	</security-role>
	<security-role>
		<role-name>Voter</role-name>
	</security-role>
</web-app>
